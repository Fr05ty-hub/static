<mjml>
  <mj-head>
    <mj-title>Verify your e-mail</mj-title>
    <mj-font name="Montserrat" href="https://fonts.googleapis.com/css?family=Montserrat:400,600" />
    <mj-font name="Roboto" href="https://fonts.googleapis.com/css?family=Roboto:400,700" />
    <mj-breakpoint width="480px" />
    <mj-attributes>
      <mj-section padding="64px 85px" background-color="#ffffff" />
      <mj-wrapper padding="0" />
      <mj-text line-height="20px" />
    </mj-attributes>

    <!--Divider-->
    <mj-style>
      .border-top { border-top: 3px solid #E4F0F7; }
    </mj-style>
    <!--padding on mobile-->
    <mj-style>
      @media only screen and (max-width:480px) { .section td { padding-left:10px!important; padding-right:10px!important; } }
    </mj-style>
    <!--Hide on mobile, use css-class="hide_on_mobile"-->
    <mj-style>
      @media only screen and (max-width: 480px){ *[class~=hide_on_mobile] { display: none !important;} }
    </mj-style>
    <!--Removing underscore on links-->
    <mj-style inline="inline">
      .link-nostyle { color: #0000FF; text-decoration: none }
    </mj-style>

    <mj-preview>Hej {{ signee_name }},<br/><br/>For at fuldføre din konto hos Moneyflow.io, skal du bekræfte din e-mailadresse: {{ company_email }}</mj-preview>

  </mj-head>
  <mj-body background-color="#E4F0F7">

    <mj-raw>
      <!-- Company Header Tables -->
    </mj-raw>
    <mj-section padding="0">
      <mj-column>
        <mj-table padding="21px 0">
          <tr>
            <td style="padding:0 0 0 18px; line-height:1;">
              <img width="111" style="width:100%; max-width:111px; display:block" src="https://moneyflow-group.github.io/static/email-templates/moneyflow_logo.png" alt="moneyflow" />
            </td>
            <td style="padding:0 18px 0 0; line-height:1;">

            </td>
          </tr>
        </mj-table>
      </mj-column>
    </mj-section>

    <mj-raw>
      <!-- Onboarding hero -->
    </mj-raw>
    <mj-section background-url="https://moneyflow-group.github.io/static/email-templates/hero_background.jpg" background-size="cover" background-repeat="no-repeat" padding="128px 0" background-color="#0000ff">
      <mj-column width="600px" vertical-align="middle">
        <mj-text align="center" line-height="34px" color="#fff" font-size="28px" font-family="Montserrat, sans-serif" font-weight="600">
          Verificér din e-mailadresse
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-raw>
      <!-- Onboarding intro text -->
    </mj-raw>
    <mj-wrapper>
      <mj-section css-class="section" background-color="#ffffff">
        <mj-column padding="0">
          <mj-text font-size="14px" padding="0" font-family="Roboto, sans-serif">
            <p>
              Hej {{ signee_name }},<br/><br/>For at fuldføre din konto hos Moneyflow.io, skal du bekræfte din e-mailadresse: {{ company_email }}
            </p>

            <p style="text-align: center;">
              <span style="
                display: inline-block;
                width: 173px;
                height: 24px;
                margin: 90px auto 0 auto;
                line-height: 24px;
                background: #0000ff;
                font-family: Montserrat, sans-serif;
                font-style: normal;
                font-weight: 600;
                font-size: 12px;
                text-align: center;
                letter-spacing: -0.0026em;
                color: #fff;
                border: 0;
                border-radius: 6px;
                text-decoration: none;
              ">
                <a
                  style="
                    display: inline-block;
                    height: 24px;
                    line-height: 24px;
                    color: #fff;
                    text-decoration: none;
                  "
                  href="{{ url_verify_email }}"
                >
                  Verificér e-mailadresse
                </a>
              </span>
            </p>
          </mj-text>
        </mj-column>
      </mj-section>
    </mj-wrapper>

    <mj-raw>
      <!-- Contact 4 (Grouped columns) -->
    </mj-raw>
    <mj-wrapper css-class="border-top">
      <mj-section css-class="section" padding-bottom="40px" background-color="#ffffff">
        <mj-column padding="0">
          <mj-text font-size="20px" font-weight="600" padding="0" font-family="Montserrat, sans-serif" padding-bottom="15px">
            Hvordan kan jeg få hjælp?
          </mj-text>
        </mj-column>
      </mj-section>
      <!-- Write us -->
      <mj-section css-class="section" padding-top="0px" background-color="#ffffff">
        <mj-group>
          <mj-column width="28%">
            <mj-image padding="0" padding-bottom="15px" width="37px" align="left" src="https://moneyflow-group.github.io/static/email-templates/comment.png">
            </mj-image>
          </mj-column>
          <mj-column padding="0" width="72%">
            <mj-text font-size="14px" font-weight="600" padding="0" font-family="Montserrat, sans-serif" padding-bottom="10px">
              Kontakt os nu
            </mj-text>
            <mj-text font-size="14px" padding="0" font-family="Roboto, sans-serif">
              <a href="moneyflow.io/" class="link-nostyle">
                       	Start en chat</a>
              <!-- change link -->
            </mj-text>
            <mj-text font-size="14px" padding="0" padding-bottom="15px" font-family="Roboto, sans-serif">
              <a href="moneyflow.io/" class="link-nostyle">
                       	Skriv en mail</a>
              <!-- change link -->
            </mj-text>
          </mj-column>
        </mj-group>
        <!-- Call us -->
        <mj-group>
          <mj-column width="28%">
            <mj-image padding="0" padding-bottom="15px" width="37px" align="left" src="https://moneyflow-group.github.io/static/email-templates/phone.png">
            </mj-image>
          </mj-column>
          <mj-column padding="0" width="72%">
            <mj-text font-size="14px" font-weight="600" padding="0" font-family="Montserrat, sans-serif" padding-bottom="10px">
              Ring til os på
            </mj-text>
            <mj-text font-size="14px" padding="0" font-family="Roboto, sans-serif">
              <a href="tel:004578733207" class="link-nostyle">
                        +45 78 73 32 07</a>
            </mj-text>
          </mj-column>
        </mj-group>
      </mj-section>
    </mj-wrapper>

    <mj-raw>
      <!-- Footer -->
    </mj-raw>
    <mj-wrapper css-class="border-top">
      <mj-section css-class="section" background-color="#ffffff" padding-top="30px" padding-bottom="20px">
        <mj-column padding="0">
          <mj-image width="111px" align="center" src="https://raw.githubusercontent.com/moneyflow-group/static/master/email-templates/moneyflow_logo.png">
          </mj-image>
          <mj-text font-size="12px" align="center" padding="0" font-family="Roboto, sans-serif" padding-top="10px" padding-bottom="30px">
            <a href="https://moneyflow.io/da/privacy/" class="link-nostyle">
                        Privatlivs- og cookiepolitik</a>
            <a>|</a>
            <a href="https://moneyflow.io/da/terms/" class="link-nostyle">
                        Forretningsbetingelser</a>
          </mj-text>
          <mj-text font-size="12px" align="center" padding="0" font-family="Roboto, sans-serif" padding-bottom="5px">
            Moneyflow er registreret og reguleret af
            <a href="https://www.finanstilsynet.dk/" Class="link-nostyle">
                      Finanstilsynet</a>
          </mj-text>
          <mj-text font-size="12px" align="center" padding="0" font-family="Roboto, sans-serif">
            Moneyflow Group Aps | Langebrogade 4, 1411 Copenhagen | CVR 39228327
          </mj-text>
        </mj-column>
      </mj-section>
    </mj-wrapper>

  </mj-body>
</mjml>